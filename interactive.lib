request_authorized_keys() {
    echo -e "Would you like to provide any authorized ssh keys?\n\
    [0]\tNo\n\
    [1]\tYes - External File\n\
    [2]\tYes - Make one\n\
    [3]\tYes - I'll Copy/Paste"

    local ANSWER

    while true; do
        read -p "> " ANSWER

        case $ANSWER in
            0)
                echo "Skipping Authorized Keys..."
                break
                ;;
            1)
                echo "Please"
    done

    
}